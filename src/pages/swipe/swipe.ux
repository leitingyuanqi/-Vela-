	  if (fun=='2'){
		  	if(this.onSelect!=2){
				this.onSelect=2
			  storage.set({
	  			key: 'EBOOK_SWIPE',
	  			value: 'column',
	  		})
			}
	  }else if(fun=='1'){
		  	if(this.onSelect!=1){
				this.onSelect=1
			  storage.set({
	  			key: 'EBOOK_SWIPE',
	  			value: 'row',
	  		})
			}
