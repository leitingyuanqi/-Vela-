			message: '删除失败',
			duration: 1000
		  })
	    }
	  })
  },
  selectFile(item){
	  router.push({
	    uri: '/pages/detail',
	  	params: { cPath: item.uri,name: item.name }
	  })
  },
  routerTo(url) {
    // 跳转到应用内的某个页面，router用法详见：文档->接口->页面路由
	router.push({
      uri: '/pages/' + url,
	  params: { cPath: this.cPath,name: this.name,size: this.size }
	})
  },
  back(){
  	router.back();
  },
  exit(){
	  app.terminate();
  }
